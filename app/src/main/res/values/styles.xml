<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppThemeBase" />

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/orange_accent</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.Launcher" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/quantum_grey</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Base.Theme.Nav" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green_dark</item>
        <item name="colorControlHighlight">@color/trans_light</item>
    </style>

    <style name="DetailTheme" parent="AppTheme" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/pink_500</item>
    </style>

</resources>
